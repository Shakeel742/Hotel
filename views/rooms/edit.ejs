<div class="container">
  <h2>Edit Room:</h2>
  <form action="<%=`/rooms/${room._id}/update?_method=PUT`%>" method="POST">
    <div class="form-group">
      <label for="floor">Floor</label>
      <input
        type="number"
        name="floor"
        placeholder="Floor"
        required
        value="<%= room.floor %>"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="roomNumber">Room Number</label>
      <input
        type="number"
        name="roomNumber"
        placeholder="Room Number"
        required
        value="<%= room.roomNumber %>"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="price">Price</label>
      <input
        type="number"
        name="price"
        placeholder="Price"
        value="<%= room.price %>"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <!-- assign date to a variable -->
      <% let year = new Date(room.checkInDate).getFullYear().toString() %> <%
      let month = (new Date(room.checkInDate).getMonth()+1).toString() %> <% if
      (month.length < 2) month = '0' + month; %> <% let day = new
      Date(room.checkInDate).getDate().toString() %> <% if (day.length < 2) day
      = '0' + day; %> <% let checkInDate = year+'-'+month+'-'+day %>

      <label for="checkInDate">Check in date</label>
      <input
        type="date"
        name="checkInDate"
        placeholder="Check in date"
        required
        value="<%= checkInDate %>"
        class="form-control"
      />
    </div>

    <div class="form-group">
      <% year = new Date(room.checkOutDate).getFullYear().toString() %> <% month
      = (new Date(room.checkOutDate).getMonth()+1).toString() %> <% if
      (month.length < 2) month = '0' + month; %> <% day = new
      Date(room.checkOutDate).getDate().toString() %> <% if (day.length < 2) day
      = '0' + day; %> <% let checkOutDate = year+'-'+month+'-'+day %>

      <label for="checkOutDate">Check out date</label>
      <input
        type="date"
        name="checkOutDate"
        placeholder="Check out date"
        required
        value="<%= checkOutDate %>"
        class="form-control"
      />
    </div>

    <input type="submit" name="submit" class="btn btn-primary" />
  </form>
</div>

<div class="container">
  <h2>Login:</h2>
  <form action="/users/login" method="POST">
    <div class="form-group">
      <label for="inputEmail">Email</label>
      <input
        type="text"
        name="email"
        id="inputEmail"
        placeholder="Email"
        autofocus
        required
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="inputPassword">Password</label>
      <input
        type="password"
        name="password"
        id="inputPassword"
        placeholder="Password"
        required
        class="form-control"
      />
    </div>

    <button type="submit" class="btn btn-primary">Login</button>
  </form>
</div>

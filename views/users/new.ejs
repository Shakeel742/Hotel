<div class="container">
  <h2>Sign Up:</h2>
  <form action="/users/create" method="post">
    <div class="form-group">
      <label for="name">Name</label>
      <input
        type="text"
        name="name"
        placeholder="Name"
        required
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="email">Email</label>
      <input
        type="email"
        name="email"
        placeholder="Email"
        required
        class="form-control"
      />
    </div>

    <div class="form-group">
      <label for="password">Password</label>
      <input
        type="password"
        name="password"
        placeholder="Password"
        required
        class="form-control"
      />
    </div>

    <input type="submit" name="submit" class="btn btn-primary" />
  </form>
</div>
